[% WRAPPER skeleton.tt
   title = post.title _ ' - Little Corner of the Internet'
   description = post.description
   author = post.author
%]
    <div class="post">
      <h1 class="post-header">
        <a class="post-title" href="/[% post.page_name %].html">[% post.title %]</a>
      </h1>

      <div class="post-duration duration" title="[% post.date %]">
        [% post.date %]
      </div>

      <div class="post-content">
        [% post.content %]
      </div>
    </div>
[% END %]
